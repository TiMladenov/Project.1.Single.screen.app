<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/MainBkgrndCol">

        <ImageView
            android:id="@+id/image"
            android:src="@drawable/visit_sofia10"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/wallpaper" />

        <ImageView
            android:id="@+id/image2"
            android:src="@drawable/visit_sofia10icon"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/image2"
            android:layout_marginTop="65dp"
            android:layout_marginStart="12dp"
            android:textSize="@dimen/companyName"
            android:color="@color/lablelTextClr"
            android:alpha="1"
            android:text="@string/companyName_1"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/image2"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="12dp"
            android:textSize="@dimen/companyName"
            android:color="@color/lablelTextClr"
            android:text="@string/companyName_2"
            android:alpha="1"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/services"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/image"
            android:background="@color/SecondBkgrnd"
            android:layout_marginTop="@dimen/genMergTop"
            android:layout_marginStart="@dimen/genMergLeft"
            android:layout_marginEnd="@dimen/genMergRight"
            android:layout_marginBottom="@dimen/genMergBottom" />

        <ImageView
            android:id="@+id/transport"
            android:layout_width="@dimen/serviceIconSize"
            android:layout_height="@dimen/serviceIconSize"
            android:src="@drawable/transport_black"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:layout_below="@id/image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/transport"
            android:layout_centerHorizontal="true"
            android:textColor="@color/GenericTextClr"
            android:textSize="@dimen/genericTextSize"
            android:text="@string/service_1"/>

        <ImageView
            android:id="@+id/hotel"
            android:layout_width="@dimen/serviceIconSize"
            android:layout_height="@dimen/serviceIconSize"
            android:src="@drawable/hotel_black"
            android:layout_marginTop="1dp"
            android:layout_marginStart="@dimen/Serv"
            android:layout_alignParentStart="true"
            android:layout_below="@id/image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hotel"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/Serv"
            android:textColor="@color/GenericTextClr"
            android:textSize="@dimen/genericTextSize"
            android:text="@string/service_2"/>

        <ImageView
            android:id="@+id/map"
            android:layout_width="@dimen/serviceIconSize"
            android:layout_height="@dimen/serviceIconSize"
            android:src="@drawable/map_black"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="@dimen/Serv"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/map"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/Serv"
            android:textColor="@color/GenericTextClr"
            android:textSize="@dimen/genericTextSize"
            android:text="@string/service_3"/>

        <TextView
            android:id="@+id/companyInfo"
            android:layout_below="@id/services"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/SecondBkgrnd"
            android:layout_marginStart="@dimen/genMergLeft"
            android:layout_marginEnd="@dimen/genMergRight"
            android:layout_marginBottom="@dimen/genMergBottom"
            android:padding="8dp"
            android:textColor="@color/GenericTextClr"
            android:textSize="@dimen/genericTextSize"
            android:text="@string/companyPres"/>

        <ImageView
            android:id="@+id/contacts"
            android:layout_width="match_parent"
            android:layout_height="@dimen/contactWindowSize"
            android:layout_below="@id/companyInfo"
            android:background="@color/SecondBkgrnd"
            android:layout_marginStart="@dimen/genMergLeft"
            android:layout_marginEnd="@dimen/genMergRight"
            android:layout_marginBottom="@dimen/genMergBottom" />

        <TextView
            android:id="@+id/contact_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/companyInfo"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/contactTextSize"
            android:textColor="@color/GenericTextClr"
            android:text="@string/contacts"/>

        <ImageView
            android:id="@+id/address_icon"
            android:layout_width="@dimen/contactImgSize"
            android:layout_height="@dimen/contactImgSize"
            android:layout_alignParentStart="true"
            android:layout_below="@id/contact_text"
            android:src="@drawable/address_black_24dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_text"
            android:layout_toEndOf="@id/address_icon"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:textSize="@dimen/contactTextSize_2"
            android:textColor="@color/GenericTextClr"
            android:text="@string/address"/>

        <ImageView
            android:id="@+id/hour_icon"
            android:layout_width="@dimen/contactImgSize"
            android:layout_height="@dimen/contactImgSize"
            android:layout_alignParentStart="true"
            android:layout_below="@id/address_icon"
            android:src="@drawable/wh_black_24dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/hour_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address_text"
            android:layout_toEndOf="@id/hour_icon"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="12dp"
            android:textSize="@dimen/contactTextSize_2"
            android:textColor="@color/GenericTextClr"
            android:text="@string/wh"/>

        <ImageView
            android:id="@+id/tel_icon"
            android:layout_width="@dimen/contactImgSize"
            android:layout_height="@dimen/contactImgSize"
            android:layout_alignParentStart="true"
            android:layout_below="@id/hour_icon"
            android:src="@drawable/phone_black_24dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/tel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hour_text"
            android:layout_toEndOf="@id/tel_icon"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="12dp"
            android:textSize="@dimen/contactTextSize_2"
            android:textColor="@color/GenericTextClr"
            android:text="@string/telNum"/>

        <ImageView
            android:id="@+id/site_icon"
            android:layout_width="@dimen/contactImgSize"
            android:layout_height="@dimen/contactImgSize"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tel_icon"
            android:src="@drawable/site_black_24dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/site_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tel_text"
            android:layout_toEndOf="@id/site_icon"
            android:layout_marginEnd="11dp"
            android:layout_marginTop="14dp"
            android:textSize="@dimen/contactTextSize_2"
            android:textColor="@color/GenericTextClr"
            android:text="@string/site"/>

        <TextView
            android:id="@+id/email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tel_text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="21dp"
            android:layout_marginTop="14dp"
            android:textSize="@dimen/contactTextSize_2"
            android:textColor="@color/GenericTextClr"
            android:text="@string/email"/>

        <ImageView
            android:id="@+id/mail_icon"
            android:layout_width="@dimen/contactImgSize"
            android:layout_height="@dimen/contactImgSize"
            android:layout_toStartOf="@id/email_text"
            android:layout_below="@id/tel_icon"
            android:src="@drawable/mail_black_24dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:id="@+id/gplus_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/site_text"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="11dp"
            android:layout_marginTop="12dp"
            android:textSize="@dimen/contactTextSize_2"
            android:textColor="@color/GenericTextClr"
            android:text="@string/gplus"/>

        <ImageView
            android:id="@+id/gplus_icon"
            android:layout_width="@dimen/gPlusSize"
            android:layout_height="@dimen/gPlusSize"
            android:layout_toStartOf="@id/gplus_text"
            android:layout_below="@id/mail_icon"
            android:src="@drawable/gplus_2_black_24dp" />
    </RelativeLayout>
</ScrollView>